<% if (recipe != null) { %>

    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="flex space-x-2">
        <li><a href="/" class="text-blue-600 hover:underline">Home</a></li>
        <li><span>/</span></li>
        <li class="font-semibold text-gray-600"><%- recipe.name %></li>
      </ol>
    </nav>
  
    <div class="flex flex-col md:flex-row">
  
      <div class="md:w-1/3 mb-4 md:mb-0">
        <img src="/uploads/<%- recipe.image %>" class="w-full h-auto sticky-top" style="top: 20px;" alt="<%- recipe.name %>" loading="lazy">
      </div>
  
      <div class="md:w-2/3 ml-8">
        <div class="mb-4">
          <h1 class="text-3xl font-bold"><%- recipe.name %></h1>
        </div>
        <div class="mb-4 text-gray-600">
          <i class="bx bx-purchase-tag-alt"></i> <%- recipe.category %>
        </div>
        <div class="mb-4" style="white-space: pre-line;">
          <h4 class="text-xl font-semibold">Cooking Instructions</h4>
          <%- recipe.description %>
        </div>
  
        <div class="pt-4">
          <h4 class="text-xl font-semibold">Ingredients</h4>
          <ul class="list-disc list-inside">
            <% recipe.ingredients.forEach(function(ingredients, index) { %>
              <li class="mb-2 mt-3 border-b list-none border-b-gray-400 "><%= ingredients %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  <% } else { %>
    <p class="text-gray-500">No item found.</p>
  <% } %>