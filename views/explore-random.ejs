<h1 class="pb-4 text-2xl font-bold">Explore Random</h1>

<div class="grid grid-cols-2 gap-2 mb-4 lg:grid-cols-5 lg:gap-3">
  <% if (recipe != '') { %>
 
    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy" class="w-full h-auto hover:scale-105 duration-300 ease-in-out shadow-md rounded-xl">
      </div>
      <div class="pt-1 text-lg"><%= recipe.name %></div>
    </a>
  
  <% } else { %>
    <p class="text-gray-500">No items found.</p>
  <% } %>
</div>